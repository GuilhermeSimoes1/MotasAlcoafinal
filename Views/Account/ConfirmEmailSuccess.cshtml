@{
    ViewData["Title"] = "E-mail confirmado";
}

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    body {
        background-color: #f8f9fa;
    }

    .confirmation-box {
        max-width: 500px;
        margin: 3rem auto;
        background-color: white;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .confirmation-box i {
            font-size: 3rem;
            color: #198754;
            margin-bottom: 1rem;
        }

        .confirmation-box h2 {
            font-weight: bold;
            margin-bottom: 1rem;
        }
</style>

<div class="confirmation-box">
    <i class="bi bi-check-circle-fill"></i>
    <h2>E-mail confirmado com sucesso!</h2>
    <p>Obrigado por confirmar o seu e-mail. Já pode fazer login.</p>
</div>
