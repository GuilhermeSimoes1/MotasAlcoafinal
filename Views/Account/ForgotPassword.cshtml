@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Recuperar Password";
}

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    body {
        background-color: #f8f9fa;
    }

    header {
        background-color: #b30000;
        color: white;
        padding: 2rem 1rem;
        text-align: center;
        margin-bottom: 3rem;
    }

    .recover-container {
        max-width: 450px;
        margin: auto;
        background-color: white;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

        .recover-container h2 {
            text-align: center;
            margin-bottom: 1.5rem;
        }

    .recover-icon {
        font-size: 3rem;
        color: #004080;
        display: flex;
        justify-content: center;
        margin-bottom: 1rem;
    }

    footer {
        background-color: #eaeaea;
        padding: 1rem;
        margin-top: 3rem;
        text-align: center;
        color: #6c757d;
    }
</style>

<div class="recover-container">
    <div class="recover-icon">
        <i class="bi bi-envelope-arrow-up-fill"></i>
    </div>

    <h2>Recuperar Password</h2>

    <form asp-action="ForgotPassword" method="post">
        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input class="form-control" value="@Context.Request.Query["email"]" readonly />
            <input type="hidden" asp-for="Email" value="@Context.Request.Query["email"]" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Enviar Link</button>
        </div>
    </form>
</div>
