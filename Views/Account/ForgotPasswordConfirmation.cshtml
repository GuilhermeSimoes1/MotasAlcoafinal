@{
    ViewData["Title"] = "Link Enviado";
}

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    body {
        background-color: #f8f9fa;
    }

    .message-box {
        max-width: 500px;
        margin: 3rem auto;
        background-color: white;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .message-box i {
            font-size: 3rem;
            color: #004080;
            margin-bottom: 1rem;
        }

        .message-box h3 {
            font-weight: bold;
            margin-bottom: 1rem;
        }
</style>

<div class="message-box">
    <i class="bi bi-envelope-check-fill"></i>
    <h3>Se o email existir, um link de recuperação foi enviado.</h3>
    <p>Por favor verifique a sua caixa de entrada.</p>
</div>
