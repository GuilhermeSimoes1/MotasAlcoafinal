@model motasAlcoafinal.Models.Clientes
@{
    ViewData["Title"] = "Detalhes do Cliente";
}
<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="fw-bold">Detalhes do Cliente</h2>
        </div>
        <div class="card-body">
            <div>
                <h4>Cliente</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Nome
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Nome
                    </dd>
                    <dt class="col-sm-2">
                        Telefone
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Telefone
                    </dd>
                    <dt class="col-sm-2">
                        Email
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Email
                    </dd>
                    <dt class="col-sm-2">
                        Endereço
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Endereco
                    </dd>
                </dl>
            </div>

            <h3>Motocicletas Associadas</h3>
            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Ano</th>
                        <th>Placa</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var motocicleta in Model.Motocicletas)
                    {
                        <tr>
                            <td>@motocicleta.Marca</td>
                            <td>@motocicleta.Modelo</td>
                            <td>@motocicleta.Ano</td>
                            <td>@motocicleta.Placa</td>
                            <td>
                                <a asp-action="Details" asp-controller="Motocicletas" asp-route-id="@motocicleta.Id" class="btn btn-info">Detalhes</a>
                                <a asp-action="Edit" asp-controller="Motocicletas"  asp-route-id="@motocicleta.Id" class="btn btn-warning">Editar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </div>
    </div>
</div>