@{
    ViewData["Title"] = "Página Inicial";
}

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    body {
        background-color: #f8f9fa;
    }

    header {
        background-color: #b30000; /* vermelho escuro */
        color: white;
        padding: 2rem 1rem;
        text-align: center;
        margin-bottom: 3rem;
    }

    .welcome-text h1 {
        font-size: 2rem;
        font-weight: bold;
    }

    .welcome-text p {
        font-size: 1.2rem;
    }

    .card-custom {
        border: none;
        border-radius: 15px;
        transition: transform 0.3s ease;
    }

        .card-custom:hover {
            transform: scale(1.05);
        }

    .bg-blue {
        background-color: #004080 !important; /* azul escuro */
    }

    footer {
        background-color: #eaeaea;
        padding: 1rem;
        margin-top: 3rem;
        text-align: center;
        color: #6c757d;
    }
</style>

<header>
    <div class="welcome-text">
        <h1>MotasAlcoa - Sistema Interno</h1>
        <p>Bem-vindo! Aceda rapidamente às funcionalidades da oficina.</p>
    </div>
</header>

@if (User.IsInRole("Gestor") || User.IsInRole("Root"))
{
    <div class="container mb-5">
        <div class="row justify-content-center mb-4">
            <div class="col-md-4 d-flex justify-content-center mb-4">
                <div class="card text-white bg-blue card-custom text-center p-3 w-100" onclick="window.location.href='@Url.Action("Index", "Servicos")'">
                    <i class="bi bi-card-list display-4"></i>
                    <div class="card-body">
                        <h5 class="card-title">Lista de Serviços</h5>
                        <p class="card-text">Consultar todos os serviços agendados.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 d-flex justify-content-center mb-4" onclick="window.location.href='@Url.Action("Index", "Pecas")'">
                <div class="card text-white bg-danger card-custom text-center p-3 w-100">
                    <i class="bi bi-box-seam display-4"></i>
                    <div class="card-body">
                        <h5 class="card-title">Estoque de Peças</h5>
                        <p class="card-text">Ver peças e quantidades disponíveis.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-4 d-flex justify-content-center mb-4">
                <div class="card text-white bg-blue card-custom text-center p-3 w-100" onclick="window.location.href='@Url.Action("Create", "Pecas")'">
                    <i class="bi bi-plus-circle display-4"></i>
                    <div class="card-body">
                        <h5 class="card-title">Adicionar Peças</h5>
                        <p class="card-text">Inserir novas peças e quantidades ao estoque.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 d-flex justify-content-center mb-4">
                <div class="card text-white bg-danger card-custom text-center p-3 w-100" onclick="window.location.href='@Url.Action("Index","Encomendas")'">
                    <i class="bi bi-truck display-4"></i>
                    <div class="card-body">
                        <h5 class="card-title">Encomendas</h5>
                        <p class="card-text">Gerir encomendas pendentes e novas.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

else if (User.IsInRole("Mecanico") || User.IsInRole("Root"))
{
    <div class="container mb-5">
        <div class="row justify-content-center mb-4">
            <div class="col-md-4 d-flex justify-content-center mb-4">
                <div class="card text-white bg-blue card-custom text-center p-3 w-100" onclick="window.location.href='@Url.Action("Create", "Clientes")'">
                    <i class="bi bi-person-plus display-4"></i>
                    <div class="card-body">
                        <h5 class="card-title">Registar Cliente</h5>
                        <p class="card-text">Adicionar novos clientes ao sistema.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 d-flex justify-content-center mb-4">
                <div class="card text-white bg-danger card-custom text-center p-3 w-100" onclick="window.location.href='@Url.Action("Create", "Motocicletas")'">
                    <i class="bi bi-bicycle display-4"></i>
                    <div class="card-body">
                        <h5 class="card-title">Nova Motocicleta</h5>
                        <p class="card-text">Associar motos aos clientes.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-4 d-flex justify-content-center mb-4">
                <div class="card text-white bg-blue card-custom text-center p-3 w-100" onclick="window.location.href='@Url.Action("Create", "Servicos")'">
                    <i class="bi bi-wrench-adjustable-circle display-4"></i>
                    <div class="card-body">
                        <h5 class="card-title">Criar Serviço</h5>
                        <p class="card-text">Agendar novo serviço de manutenção.</p>
                    </div>
                </div>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
        }
    </div>
}
