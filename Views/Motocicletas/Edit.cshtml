@model motasAlcoafinal.Models.Motocicletas
@{
    ViewData["Title"] = "Editar Motocicleta";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="fw-bold"><i class="fas fa-edit"></i> Editar Motocicleta</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Marca" class="form-label fw-bold">Marca</label>
                    <input asp-for="Marca" class="form-control border-primary shadow-sm" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Modelo" class="form-label fw-bold">Modelo</label>
                    <input asp-for="Modelo" class="form-control border-primary shadow-sm" />
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Ano" class="form-label fw-bold">Ano</label>
                    <input asp-for="Ano" type="number" class="form-control border-primary shadow-sm" />
                    <span asp-validation-for="Ano" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Placa" class="form-label fw-bold">Placa</label>
                    <input asp-for="Placa" class="form-control border-primary shadow-sm" />
                    <span asp-validation-for="Placa" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="ClienteId" class="form-label fw-bold">Cliente</label>
                    <select asp-for="ClienteId" class="form-select border-primary shadow-sm" asp-items="ViewBag.Clientes">
                        <option value="">Selecione um cliente...</option>
                    </select>
                    <span asp-validation-for="ClienteId" class="text-danger"></span>
                </div>
                <div class="col-12 mt-3 d-flex justify-content-between align-items-center">
                    <div>
                        <button type="submit" class="btn btn-primary shadow"><i class="fas fa-save"></i> Guardar</button>
                        @if(User.IsInRole("Mecanico") || User.IsInRole("Root")){
                            <button type="submit" form="deleteForm" class="btn btn-danger ms-2"><i class="fas fa-trash"></i> Remover</button>
                        }
                    </div>
                    <a asp-action="Index" class="btn btn-secondary shadow"><i class="fas fa-arrow-left"></i> Cancelar</a>
                </div>
            </form>
            @if(User.IsInRole("Mecanico") || User.IsInRole("Root")){
                <form id="deleteForm" asp-action="Delete" method="post" class="d-none">
                    <input type="hidden" name="id" value="@Model.Id" />
                </form>
            }
        </div>
    </div>
</div>

<!-- Adicionando FontAwesome para os ícones -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
