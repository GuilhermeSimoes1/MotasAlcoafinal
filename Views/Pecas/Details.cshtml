@model motasAlcoafinal.Models.Pecas
@{
    ViewData["Title"] = "Detalhes da Peça";
}
<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="fw-bold">Detalhes da Peça</h2>
        </div>

        <div class="card p-4 bg-light">
            <h4 class="fw-bold">@Model.Nome</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Descrição:</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.Descricao))
                    {
                        @Model.Descricao
                    }
                    else
                    {
                        <span class="text-muted">Sem descrição</span>
                    }
                </dd>

                <dt class="col-sm-3">Preço:</dt>
                <dd class="col-sm-9">@Model.Preco.ToString("C", new System.Globalization.CultureInfo("pt-PT"))</dd>

                <dt class="col-sm-3">Quantidade em Estoque:</dt>
                <dd class="col-sm-9">@Model.QuantidadeEstoque</dd>
            </dl>
        </div>

        <div class="card-footer d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary shadow me-2">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Tem certeza que deseja remover esta peça?');">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Remover
                    </button>
                </form>
            </div>
            <a asp-action="Index" class="btn btn-secondary shadow">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
        </div>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-warning mt-3">@TempData["Error"]</div>
        }
    </div>
</div>
<!-- Adicionando FontAwesome para ícones -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
