@model motasAlcoafinal.Models.Pecas
@{
    ViewData["Title"] = "Editar Peça";
}

<h2 class="mb-4">Editar Peça</h2>

<form asp-action="Edit" method="post" class="form-horizontal p-3 border rounded shadow-sm bg-light">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label fw-bold">Nome da Peça</label>
        <input asp-for="Nome" class="form-control" placeholder="Ex: Filtro de Óleo" required />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Descricao" class="form-label fw-bold">Descrição</label>
        <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Breve descrição da peça"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Preco" class="form-label fw-bold">Preço</label>
        <input asp-for="Preco" class="form-control" type="number" step="0.01" min="0" placeholder="Ex: 199.99" required />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="QuantidadeEstoque" class="form-label fw-bold">Quantidade em Estoque</label>
        <input asp-for="QuantidadeEstoque" class="form-control" type="number" min="0" placeholder="Ex: 20" required />
        <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Salvar
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-times"></i> Cancelar
        </a>
    </div>
</form>

<!-- Adicionando FontAwesome para os ícones -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
